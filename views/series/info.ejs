<%- include ('../partials/header') %> 

<section id="about">
    <div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <form method="POST">
                <h2>Sobre a Série: <%= serie.name %></h2>
                    <div class="form-group">
                        Nome da Série: <%= serie.name %>
                    </div>  
                    <textarea class="form-control" name="comentario"></textarea>
